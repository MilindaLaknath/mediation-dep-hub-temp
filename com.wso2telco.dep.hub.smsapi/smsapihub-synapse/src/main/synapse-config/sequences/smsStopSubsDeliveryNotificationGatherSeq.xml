<?xml version="1.0" encoding="UTF-8"?>
<sequence name="smsStopSubsDeliveryNotificationGatherSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom">
        <property name="STATUS" value="==== @ SMS GatherSeq ===="/>
    </log>
    <filter regex="200|201|204" source="$axis2:HTTP_SC">
        <then>
            <property name="status" scope="default" type="STRING" value="deleted"/>
        </then>
        <else>
            <property name="status" scope="default" type="STRING" value="failed"/>
        </else>
    </filter>

    <switch source="$axis2:HTTP_SC">
        <case regex="(200|201|204)">
            <dbreport>
                <connection>
                    <pool>
                        <dsName>jdbc/WSO2TELCO_DEP_DB</dsName>
                    </pool>
                </connection>
                <statement>
                    <sql><![CDATA[delete from outbound_operatorsubs where dn_subscription_did=?;]]></sql>
                    <parameter expression="$ctx:subscriptionId" type="VARCHAR"/>
                </statement>
            </dbreport>
            <dbreport>
                <connection>
                    <pool>
                        <dsName>jdbc/WSO2TELCO_DEP_DB</dsName>
                    </pool>
                </connection>
                <statement>
                    <sql><![CDATA[delete from outbound_subscriptions where dn_subscription_did=?;]]></sql>
                    <parameter expression="$ctx:subscriptionId" type="VARCHAR"/>
                </statement>
            </dbreport>
        </case>
        <default/>
    </switch>

    <payloadFactory media-type="json">
        <format>
            {
            "operators" : {
            "operatorCode" : "$1",
            "status": "$2"
            }
            }
        </format>
        <args>
            <arg evaluator="xml" expression="get-property('operatorCode')"/>
            <arg evaluator="xml" expression="get-property('status')"/>
        </args>
    </payloadFactory>

    <property name="collection" scope="default">
        <deleteSubscription xmlns=""/>
    </property>

    <aggregate id="sms_stop_splitter">
        <completeCondition>
            <messageCount max="-1" min="-1"/>
        </completeCondition>
        <onComplete enclosingElementProperty="collection" expression="//operators">
            <log level="custom">
                <property name="STATUS" value="==== @ SMS GatherSeq OnComplete ===="/>
            </log>

            <payloadFactory media-type="xml">
                <format>
                    <deleteSubscription>
                        <?xml-multiple operators?>$1
                        <resourceURL>$2</resourceURL>
                    </deleteSubscription>
                </format>
                <args>
                    <arg evaluator="xml" expression="//operators"/>
                    <arg evaluator="xml" expression="$ctx:responseResourceURL"/>
                </args>
            </payloadFactory>

            <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200"/>

		   	<call-template target="com.wso2telco.dep.common.loggingExtension.Template">
		 		<with-param name="direction" value="RESPONSEOUT"/>
			</call-template>

            <call-template target="com.wso2telco.dep.common.main.response.datapublisher.Template">
                <with-param name="msisdn" value="{$ctx:MSISDN}"/>
                <with-param name="direction" value="nb"/>
            </call-template>

            <respond/>
        </onComplete>
    </aggregate>
</sequence>
