<?xml version="1.0" encoding="UTF-8"?>
<sequence name="replaceResourceURLSeq" xmlns="http://ws.apache.org/ns/synapse">
    <property name="propertyReplacement" expression="fn:concat(syn:get-property('hubGateway'), syn:get-property('CONTEXT'), syn:get-property('REST_SUB_REQUEST_PATH'), '/', syn:get-property('requestID'))" scope="default" xmlns:fn="http://www.w3.org/2005/xpath-functions"/>
    <class name="com.wso2telco.dep.common.mediation.UtilMediator">
        <property name="propertyValue" value="singlePropertyReplacement"/>
        <property name="propertyName" value="resourceURL"/>
        <property name="propertyPath" value="payload.amountTransaction.resourceURL"/>
        <property name="msgContextProperty" value="propertyReplacement"/>
    </class>


    <class name="com.wso2telco.dep.common.mediation.UtilMediator">
        <property name="propertyPath" value="payload.amountTransaction.clientCorrelator"/>
        <property name="propertyValue" value="singlePropertyReplacement"/>
        <property name="propertyName" value="clientCorrelator"/>
        <property name="msgContextProperty" value="originalClientCorrelator"/>
    </class>
</sequence>